{
  "name": "rabdelaal.github.io",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
  "build:vendor": "esbuild --bundle marked --minify --outfile=scripts/marked.min.js",
  "minify:css": "esbuild styles/main.css --minify --outfile=styles/main.min.css",
  "minify:js": "esbuild scripts/timeline.js --minify --outfile=scripts/timeline.min.js && esbuild scripts/hero-lazy.js --minify --outfile=scripts/hero-lazy.min.js",
  "build": "npm run build:vendor && npm run minify:css && npm run minify:js",
  "ci:validate": "npx html-validate \"index.html\" \"papers/*.html\" && npx linkinator index.html --recurse"
  },
  "devDependencies": {
    "esbuild": "^0.18.18",
    "marked": "^5.1.1",
    "html-validate": "^7.11.0",
    "linkinator": "^2.9.0"
  }
}
